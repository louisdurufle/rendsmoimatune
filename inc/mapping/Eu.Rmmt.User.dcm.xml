<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Eu\Rmmt\User" table="`user`">
        <id name="_id" type="integer" column="user_pk">
            <generator strategy="SEQUENCE" />
            <sequence-generator sequence-name="user_user_pk_seq" initial-value="1" allocation-size="1" />
        </id>

        <field name="_firstName"  column="first_name" type="string"  />
        <field name="_lastName"   column="last_name"  type="string"  />
        <field name="_email"      column="email"      type="string"  />
        <field name="_password"   column="password"   type="string"  />
        <field name="_isAdmin"    column="is_admin"   type="boolean" />
        <field name="_registered" column="registered" type="boolean" />


        <one-to-many target-entity="Repayment" mapped-by="_fromUser" field="_repaymentsFromMe" />
        <one-to-many target-entity="Repayment" mapped-by="_toUser"   field="_repaymentsToMe" />
        <one-to-many target-entity="Payed"     mapped-by="_user"     field="_payed"     />
        <one-to-many target-entity="Involved"  mapped-by="_user"     field="_involved"  />

        <many-to-many target-entity="Event" field="_events" mapped-by="_users"/>
    </entity>
</doctrine-mapping>
