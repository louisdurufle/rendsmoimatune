<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Eu\Rmmt\Event" table="event">
        <id name="_id" type="integer" column="event_pk">
            <generator strategy="SEQUENCE" />
            <sequence-generator sequence-name="event_event_pk_seq" initial-value="1" allocation-size="1" />        </id>

        <field name="_name"        column="name"         type="string" />
        <field name="_startDate"   column="start_date"   type="date"   />
        <field name="_endDate"    column="end_date"     type="date"   />

        <one-to-many target-entity="Repayment"   field="_repayments"   mapped-by="_event" />
        <one-to-many target-entity="Expenditure" field="_expenditures" mapped-by="_event" />

        <many-to-many target-entity="User" field="_users" inversed-by="_events" >
            <join-table name="event_user">
                <join-columns>
                    <join-column name="event_pcfk" referenced-column-name="event_pk" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_pcfk" referenced-column-name="user_pk"  />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
