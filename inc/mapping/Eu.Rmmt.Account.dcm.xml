<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Eu\Rmmt\Account" table="account">
        <id name="_id" type="integer" column="account_pk">
            <generator strategy="SEQUENCE" />
            <sequence-generator sequence-name="account_account_pk_seq" initial-value="1" allocation-size="1" />        </id>

        <field name="_name"         column="name"           type="string" />
        <field name="_startDate"    column="start_date"     type="date"   />
        <field name="_endDate"      column="end_date"       type="date"   />
        <field name="_creationDate" column="creation_date"  type="date"   />

        <many-to-one target-entity="User" field="_creator">
            <join-column name="creator_fk" referenced-column-name="user_pk" />
        </many-to-one>

        <one-to-many target-entity="Repayment"   field="_repayments"   mapped-by="_account">
            <order-by>
                <order-by-field name="_date" direction="DESC" />
            </order-by>
        </one-to-many>
        <one-to-many target-entity="Expenditure" field="_expenditures" mapped-by="_account">
            <order-by>
                <order-by-field name="_date" direction="DESC" />
                <order-by-field name="_id" direction="DESC" />
            </order-by>
        </one-to-many>

        <many-to-many target-entity="User" field="_users" inversed-by="_accounts" >
            <join-table name="account_user">
                <join-columns>
                    <join-column name="account_pcfk" referenced-column-name="account_pk" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_pcfk" referenced-column-name="user_pk"  />
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist />
            </cascade>
            <order-by>
                <order-by-field name="_id" direction="ASC" />
            </order-by>
        </many-to-many>

    </entity>
</doctrine-mapping>
